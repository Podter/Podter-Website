---
import Layout from "@/layouts/Layout.astro";
import { TypographyP } from "@/components/ui/typography";
import NotFoundMenu from "@/components/not-found/NotFoundMenu";
import FlyingToasters from "@/components/not-found/FlyingToasters.astro";
---

<Layout
  title="404 Not found"
  description="You are looking for something that doesn't actually exist."
  displayTitle={false}
  displayDescription={false}
>
  <div
    class="flex flex-col justify-center items-center content-height w-full relative overflow-hidden"
  >
    <h1 class="font-extrabold text-8xl md:text-9xl">404</h1>
    <h2 class="scroll-m-20 text-3xl font-bold tracking-tight">Not found</h2>
    <TypographyP className="!mt-3">
      You're looking for something that doesn't exist.
    </TypographyP>
    <NotFoundMenu client:load />
    <FlyingToasters
      className="fixed md:absolute top-0 bottom-0 left-0 right-0 h-screen md:h-full w-full -z-20"
    />
    <div
      class="hidden md:flex absolute top-0 bottom-0 left-0 right-0 h-full w-full -z-10 shadow-flying-toasters"
    >
    </div>
  </div>
</Layout>

<style lang="scss">
  .shadow-flying-toasters {
    box-shadow: inset 0 0 50px 75px hsl(var(--background));
  }

  .content-height {
    height: calc(100vh - 15rem);
  }

  @media (min-width: 768px) {
    .content-height {
      height: calc(100vh - 17rem);
    }
  }
</style>
