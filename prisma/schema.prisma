generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model GuestbookMessage {
  id        String   @id @default(cuid())
  created   DateTime @default(now())
  updatedAt DateTime @updatedAt
  updated   Boolean  @default(false)
  email     String
  name      String
  avatar    String?
  message   String
}
